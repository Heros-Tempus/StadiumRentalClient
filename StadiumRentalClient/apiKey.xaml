<UserControl x:Class="StadiumRentalClient.apiKeyDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StadiumRentalClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#7F000000">
        <Label Content="Enter API Key" HorizontalAlignment="Left" Margin="72,85,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="txtAPIKey" HorizontalAlignment="Left" Margin="240,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnOK" Content="Ok" HorizontalAlignment="Left" Margin="360,153,0,0" VerticalAlignment="Top" Width="50" Height="20" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="444,153,0,0" VerticalAlignment="Top" Width="50" Height="20" Click="btnCancel_Click"/>

    </Grid>
</UserControl>
