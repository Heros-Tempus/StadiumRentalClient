<UserControl x:Class="StadiumRentalClient.ConnectionStringDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StadiumRentalClient"
             mc:Ignorable="d" Width="850" Height="450">
    <Grid Background="#4C000000">
        <Button x:Name="Ok_Button" Content="Ok" RenderTransformOrigin="-0.439,-0.476" Click="Ok_Button_Click" Margin="156,40,60,9" ToolTip="This button only works if you entered the correct connection string" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="20"/>
        <TextBox x:Name="Connection_String_Textbox" TextWrapping="Wrap" Margin="15,40,105,9" Width="136" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Enter Connection String" Foreground="White" Margin="15,10,105,33" Width="136" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
