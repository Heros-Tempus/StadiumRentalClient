<UserControl x:Class="StadiumRentalClient.ConnectionStringDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StadiumRentalClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#4C000000" Margin="250,175,294,206">
        <Button x:Name="Cancel_Button" Content="Cancel" VerticalAlignment="Top" Click="Cancel_Button_Click" Margin="201,40,0,0" Height="20" HorizontalAlignment="Left" Width="40"/>
        <Button x:Name="Ok_Button" Content="Ok" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.439,-0.476" Click="Ok_Button_Click" Margin="156,40,0,0" Height="20" Width="40"/>
        <TextBox x:Name="Connection_String_Textbox" HorizontalAlignment="Left" TextWrapping="Wrap" Width="136" Margin="15,40,0,0" Height="20" VerticalAlignment="Top"/>
        <Label Content="Enter Connection String" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>

    </Grid>
</UserControl>
