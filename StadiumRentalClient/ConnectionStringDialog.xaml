<UserControl x:Class="StadiumRentalClient.ConnectionStringDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StadiumRentalClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#4C000000">
        <Button x:Name="Cancel_Button" Content="Button" HorizontalAlignment="Left" Margin="428,117,0,0" VerticalAlignment="Top" Click="Cancel_Button_Click"/>
        <Button x:Name="Ok_Button" Content="Button" HorizontalAlignment="Left" Margin="383,117,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.439,-0.476" Click="Ok_Button_Click"/>
        <TextBox x:Name="Connection_String_Textbox" HorizontalAlignment="Left" Margin="258,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter Connection String" HorizontalAlignment="Left" Margin="43,109,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</UserControl>
